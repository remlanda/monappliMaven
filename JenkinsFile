// Declarative //
pipeline {
	agent any
	stages {
		stage('Build') {
			steps {
				bat 'mvn install'
			}
		 post {
                success {
			stage('Test') {
			steps {
				junit 'target/surefire-reports/*.xml'
			}
                    
                        }
                 }
               
		}
	}
}
}
